<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_banner"
    android:layout_width="match_parent"
    android:layout_height="246dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/ranktop_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="96dp"
            android:layout_marginTop="82dp"
            android:background="@drawable/podium" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="32dp"
                    android:id="@+id/sliver_icon"
                    android:background="@mipmap/silver_icon" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/silver_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="top"
                        android:adjustViewBounds="true"
                        android:background="@mipmap/arix" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:adjustViewBounds="true">

                        <include layout="@layout/star_layout" />
                    </LinearLayout>


                </FrameLayout>

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:text="Temple RUN 2"
                    android:textColor="#000"
                    android:id="@+id/silver_title"
                    android:textSize="12sp" />

                <Button
                    style="@style/btn_name"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/btn_silver"
                    android:text="Download" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/gold_icon"
                    android:background="@mipmap/gold_icon" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/gold_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="top"
                        android:adjustViewBounds="true"
                        android:background="@mipmap/easterush" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:adjustViewBounds="true">

                        <include layout="@layout/star_layout" />
                    </LinearLayout>


                </FrameLayout>

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:text="The Amazing Spider-Man 2"
                    android:textColor="#000"
                    android:id="@+id/gold_title"
                    android:textSize="12sp" />

                <Button
                    style="@style/btn_name"
                    android:layout_marginTop="8dp"
                    android:id="@+id/btn_gold"
                    android:text="Play" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="32dp"
                    android:id="@+id/bronze_icon"
                    android:background="@mipmap/bronze_icon" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_marginTop="6dp">

                   <ImageView
                        android:id="@+id/bronze_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="top"
                        android:adjustViewBounds="true"
                        android:background="@mipmap/xtom" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:adjustViewBounds="true">

                        <include layout="@layout/star_layout" />
                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/bronze_title"
                    android:text="Clash of Clans"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <Button
                    style="@style/btn_name"
                    android:layout_marginTop="8dp"
                    android:id="@+id/btn_bronze"
                    android:text="Play" />
            </LinearLayout>







        </LinearLayout>

    </FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_12dp"
        android:background="@color/skin_download_bg_color"
        android:tag="skin:skin_download_bg_color:background"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_46dp">
        <TextView
            android:id="@+id/tv_group_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dimen_20dp"
            android:text="@string/download_status_downloading"
            android:textColor="#b2b2b2"
            android:textDirection="locale"
            android:textSize="@dimen/small"/>
        <TextView
            android:id="@+id/tv_pause_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:text="@string/clear_task_records"
            android:visibility="gone"
            android:src="@drawable/download_group_indicator_down"/>
    </RelativeLayout>
</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_h5" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme_Main" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/color_google_play</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="AppTheme_detail" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_google_play</item>
        <item name="colorPrimaryDark">@color/color_dark_google_play</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Base.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="DrawerListText">
        <item name="android:textColor">#1a1a1a</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BottomBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BottomBarIcon">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="DrawerIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="appcenter_ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/appcenter_ranking_selector</item>
        <item name="android:minHeight">11dip</item>
        <item name="android:maxHeight">11dip</item>
    </style>

    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/app_rank_selector</item>
    </style>


    <style name="btn_name">
        <item name="android:background">@drawable/btn_round_corner</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">58dp</item>
    </style>

    <style name="star_text">
        <item name="android:textColor">#FFE65100</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="tv_number_sort">
        <item name="android:textColor">#FF424242</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="tv_title">
        <item name="android:textColor">#FF424242</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="tv_desc">
        <item name="android:textColor">#FF9E9E9E</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>



    <style name="NoMarginToolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="item_smart_icon_imageview_style">
        <item name="android:paddingStart">0.0dip</item>
        <item name="android:paddingEnd">0.0dip</item>
        <item name="android:layout_width">@dimen/item_icon_image_width</item>
        <item name="android:layout_height">@dimen/item_icon_image_height</item>
    </style>

    <style name="appcenter_custom_rating_bar_style" prarent="android.Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/appcenter_rating_bar_style</item>
    </style>

    <style name="adapter_item_inside_layout_padding_style">
        <item name="android:paddingStart">@dimen/item_inside_left_or_right_padding</item>
        <item name="android:paddingTop">@dimen/item_inside_top_or_bottom_padding</item>
        <item name="android:paddingEnd">@dimen/item_inside_left_or_right_padding</item>
        <item name="android:paddingBottom">@dimen/item_inside_top_or_bottom_padding</item>
    </style>

    <style name="item_layout_title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ff525252</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="item_layout_download">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff9f9f9f</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="adapter_game_item_layout_padding_style">
        <item name="android:paddingStart">@dimen/game_item_left_or_right_padding</item>
        <item name="android:paddingTop">@dimen/game_item_top_or_bottom_padding</item>
        <item name="android:paddingEnd">@dimen/game_item_left_or_right_padding</item>
        <item name="android:paddingBottom">@dimen/game_item_top_or_bottom_padding</item>
    </style>

    <style name="toolbarTitleSize">
        <item name="android:textSize">16sp</item>
    </style>


    <!--NavigationView-->
    <style name="NaviegationStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#1a1a1a</item>
    </style>

    <!--<style name="NotificationContent">-->
        <!--<item name="android:textColor">?android:attr/textColorPrimary</item>-->
    <!--</style>-->

    <!--<style name="NotificationTitle">-->
        <!--<item name="android:textColor">?android:attr/textColorPrimary</item>-->
        <!--<item name="android:textStyle">bold</item>-->
    <!--</style>-->

    <style
        name="NotificationContent"
        parent="android:TextAppearance.StatusBar.EventContent" />
    <style
        name="NotificationTitle"
        parent="android:TextAppearance.StatusBar.EventContent.Title" />

    <style name="AnimationBottomFade">
        <item name="android:windowEnterAnimation">@anim/bottom_popview_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_popview_out</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:background">@drawable/dialog_background</item>
    </style>


    <style name="Dialog" parent="Base.Animation.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
